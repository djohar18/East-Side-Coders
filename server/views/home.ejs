<% include partials/header.ejs %>
<% include partials/main_nav.ejs %>
<section class="homepage" id="home">
<div class="container">
    <div class="offset-md-1 col-md-10">
        <br>
        <!-- create a new survey -->
        <a href="/create" class="btn btn-primary btn-lg mt-2 ml-2">Create a new survey</a>

        <!-- repeatable card -->
        <% for (let count = 0; count < surveyList.length; count++) { %>
            <div class="card m-2">
                <div class="card-header">
                  <h5 style="color: rgb(9, 7, 75);"><strong> Survey No <%= count + 1 %>.</strong></h5> 
                </div>
                <div class="card-body">
                 <h3 class="card-title"><strong> <%= surveyList[count].type %> </h3></strong>
                    <p class="card-text"> <h4><%= surveyList[count].question %></h4> </p>
                    <a href="/answer/<%= surveyList[count]._id %>" class="btn btn-primary">Answer</a>
                    <% if(isAuthenticated){%>
                        <a href="/edit/<%= surveyList[count]._id %>" class=" btn btn-primary">
                            <i class="far fa-edit"></i>Edit 
                        </a>
                        <a class="btn btn-danger" href="/delete/<%= surveyList[count]._id %>">
                            <i class="fas fa-trash-alt"></i> Delete 
                        </a>
                    <%}%>
                </div>
            </div>
        <% } %>

    </div>
</div>
</section>

<% include partials/bottom_nav.ejs %>
<% include partials/footer.ejs %>

