            <h1>Create Survey</h1>
            <form class="form" method="POST" action="/create">
                <form action="/create">
                    <label for="survey"><h5><strong>Choose a type of survey:</strong> </h5></label>
                    <div>
                    <select class="survey" name="survey" id="survey" style="width: 400px">
                        <option>----- Select Survey Type -----</option>
                      <option value="Agree or Disagree">Agree or Disagree</option>
                      <option value="Multiple Choice">Multiple Choice </option>
                      <option value="Text">Text Question</option>
                      </select>
                    </div>
                    <br>
                    <br>
                    <br>
                    <br>

                    <div>
                        <label form="question"><h5><strong> Enter The Question:</strong> </h5></label><br>
                        <input type="text" 
                        class="survey" 
                        id="question" 
                        placeholder="Enter The Question" 
                        name="name" 
                         required>
                        <br><br>
                      
                    </div>
                    
                  </form>
                  <br><br>
                        <br><br><br>  <br>
                        <br><br><br><br>
                <button class="btn btn-primary" type="submit" >
                    <i class="far fa-submit"></i>Submit
                </button>
                <a href="/" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>
</div>
