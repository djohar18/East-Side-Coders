<% include partials/header.ejs %>
<% include partials/main_nav.ejs %>

<section class="createpage" id="create">
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-8">
            <br>
            <br>
           <p> <h1><%= title %></h1></p>

            <form class="form" method="POST" action="/create">                

                <!-- Select Element -->
                <div class="col-sm-6 mb-3">
                    <label for="type">Choose a type of survey:</label>
                    <select class="form-select" name="type" id="type" style="width: 400px"
                        onchange="typeChanged(this)">
                        <option value="" selected disabled>Choose a type</option>
                        <option value="Agree or Disagree">Agree or Disagree</option>
                        <option value="MCQ">Multiple Choice </option>
                        <option value="Text">Text Question</option>
                    </select>
                </div>

                <!-- Question Element -->
                <div class="col-sm-6 mb-3" id="questionDiv" style="display:none">
                    <label class="form-label">Enter The Question :</label>
                    <input class="survey" type="text" class="form-control" id="question" name="question"
                        required>
                </div>

                <!-- Options Element -->
                <div class="col-sm-6 mb-3" id="optionDiv" style="display:none">
                    <label class="form-label">Enter Options :</label>
                    <div id="options">
                        <input class="survey" type="text" class="form-control" id="option" name="options[]">
                    </div>
                    <div class="controls">
                        <a href="#" id="addOption">Add</a>
                        <a href="#" id="removeOption">Remove</a>
                    </div>
                </div>

                <!-- Text Answer Element -->
                <div class="col-sm-6 mb3" id="textAnswerDiv" style="display:none">
                    <label class="form-label">Text Answer :</label>
                    <input class="survey" type="text" id="textAnswer" name="textAnswer"
                        style="height:100px">
                </div>

                <div><br>
                    <button class="btn btn-primary" type="submit" >
                       <i class="far fa-submit"></i>Submit
                    </button>                   
                    <a href="/" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
                </div>                      
            </form>
            </div>
        </form>
    </div>
</div>
</div>
</section>

<% include partials/bottom_nav.ejs %>
<% include partials/footer.ejs %>

