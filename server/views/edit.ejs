<% include partials/header.ejs %>
<% include partials/main_nav.ejs %>
<section class="editpage" id="edit">
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-8">
            <br>
                         <br>
            <h1>Edit Survey</h1>
            <form class="form" method="POST" action="/edit/<%= Survey._id %>">
                    <label for="type"> <h5><strong>Select a survey type to edit:</strong> </h5></label>
                    <div>
                    <select class="survey" name="type" id="type">
                      <option value="Agree or Disagree">Agree or Disagree</option>
                      <option value="MCQ">Multiple Choice </option>
                      <option value="Text">Text Question</option>
                      </select>
                    </div>
                    <div>
                        <% if (typeof displayName == 'MCQ' && displayName) { %>}
                        <label form="question"><h5><strong>Enter The Question :</strong> </h5></label><br>
                        <input class="survey" type="text" class="form-control" id="question" placeholder="Enter The Question" name="name" required>
                         <br>
                         <label form="option"><h5><strong>Enter The Option:</strong> </h5></label><br>
                         <input class="survey" type="text"                          class="form-control"id="option" placeholder="Enter The option" name="name" required>

                          <input class="survey" type="text" class="form-control" id="option" placeholder="Enter The Option" name="name" required>

                           <input class="survey" type="text" class="form-control" id="option" placeholder="Enter The Option" name="name" required>

                        <% } else { %>
                            <label form="question"><h5><strong>Enter The Question :</strong> </h5></label><br>
                        <input class="survey" type="text" class="form-control" id="question" placeholder="Enter The Question" name="question" value="<%= Survey.question %>" required>
                        <% } %>
                        
                         
                    </div>
                    <div>
                        <button class="btn btn-primary" type="submit" >
                            <i class="far fa-submit"></i>Submit
                        </button>
                        <a href="/" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel
                        </a>
                    </div>
                  </form>
                
            </div>
        </form>
    </div>
</div>
</div>
</section>

